<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/confirmation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/delete_confirmation_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/confirm_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirmation_title"
                android:layout_centerHorizontal="true"
                android:paddingVertical="25dp"
                android:text="@string/delete_ques_text"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm_ques"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/yes_btn"
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:text="@string/yes_text"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/no_btn"
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:text="@string/no_text"
                    android:textStyle="italic" />


            </TableRow>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>